# Backend Docker Compose environment variables

# --- Database ---
DB_SERVER=sqlserver
DB_PORT=1433
DB_NAME=distribuidora_db
DB_USER=SA
DB_PASSWORD=change-me-strong-password

# --- SQL Server Container ---
ACCEPT_EULA=Y
SA_PASSWORD=change-me-strong-password
MSSQL_PID=Developer
MSSQL_AGENT_ENABLED=true
MSSQL_TCP_PORT=1433
MSSQL_COLLATION=SQL_Latin1_General_CP1_CI_AS

# --- RabbitMQ ---
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# --- SMTP / Emails ---
SMTP_SERVER=smtp.gmail.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASSWORD=change-me-app-password
EMAIL_FROM_NAME=Distribuidora Perro y Gatos
EMAIL_FROM_ADDRESS=you@example.com

# --- App defaults ---
ADMIN_EMAIL=admin@gmail.com
ADMIN_PASSWORD=change-me-Admin123!@#
SECRET_KEY=change-me-in-production
BACKEND_LOG_FILE=/var/log/backend/app.log
SEED_ADMIN_FORCE_ERROR=0
